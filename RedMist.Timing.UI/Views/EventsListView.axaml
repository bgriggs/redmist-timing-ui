<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:design="clr-namespace:RedMist.Timing.UI.ViewModels.Design"
			 xmlns:vm="clr-namespace:RedMist.Timing.UI.ViewModels"
			 mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="450"
			 x:Class="RedMist.Timing.UI.Views.EventsListView"
			 x:DataType="vm:EventsListViewModel">
	<Design.DataContext>
		<!-- This only sets the DataContext for the previewer in an IDE,
		to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
		<design:DesignEventsListViewModel />
	</Design.DataContext>

	<Grid RowDefinitions="Auto,Auto,Auto,*,Auto">
		<Border Background="{DynamicResource medAppBackground}" BorderThickness="0,0,0,2" BorderBrush="{DynamicResource boldItemBorder}">
			<Grid ColumnDefinitions="70,*,70">
				<Image Source="avares://RedMist.Timing.UI/Assets/redmist.png" Width="70" Height="35" Margin="5,4,0,5"/>
				<TextBlock Text="{Binding PageTitle}" Classes="title" Margin="0,-3,0,0" VerticalAlignment="Center" Grid.Column="1" HorizontalAlignment="Center"/>
				<Button Grid.Column="2" ToolTip.Tip="Reload Events" Margin="7" Command="{Binding RefreshEvents}" HorizontalAlignment="Right">
					<PathIcon Height="12" Width="12" Foreground="{DynamicResource IconButtonForegroundBrush}" Data="{StaticResource refreshArrow}" VerticalAlignment="Top" Margin="0,1,0,0"/>
				</Button>
			</Grid>
		</Border>

		<TextBlock Text="Loading..." IsVisible="{Binding IsLoading}" Grid.Row="1" Classes="title" Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
		<TextBlock Text="{Binding Message}" IsVisible="{Binding HasMessage}" Grid.Row="2" TextWrapping="Wrap" FontSize="9"/>
		<ScrollViewer Grid.Row="3" IsVisible="{Binding !IsLoading}" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
			<ItemsControl ItemsSource="{Binding Events}">
				<ItemsControl.ItemTemplate>
					<DataTemplate>
						<Button Background="{DynamicResource EventRowBackgroundBrush}" MinHeight="63" CornerRadius="0" BorderThickness="0,0,0,2"
								BorderBrush="{DynamicResource boldItemBorder}" HorizontalAlignment="Stretch" Padding="4,1,3,4"
								Command="{Binding SelectEvent}" CommandParameter="{Binding .}">
							<Grid ColumnDefinitions="Auto,*,Auto">
								<Image Source="{Binding OrganizationLogo}"
									   Height="55"
									   Width="55"
									   VerticalAlignment="Center"
									   RenderOptions.BitmapInterpolationMode="HighQuality"/>

								<!--Event Information-->
								<StackPanel Grid.Column="1" VerticalAlignment="Center">
									<TextBlock Text="{Binding Name}" Margin="8,3,3,1" VerticalAlignment="Top" TextWrapping="Wrap" IsVisible="{Binding !IsSimulation}"/>
									<TextBlock Text="{Binding Name}" Margin="8,3,3,1" VerticalAlignment="Top" TextWrapping="Wrap" FontStyle="Italic" IsVisible="{Binding IsSimulation}"/>

									<!--Schedule-->
									<ItemsControl ItemsSource="{Binding ScheduleDays}" Margin="13,0,0,0">
										<ItemsControl.ItemTemplate>
											<DataTemplate DataType="vm:ScheduleDayViewModel">
												<StackPanel>
													<!--<TextBlock Text="{Binding DayString}" Classes="theme-text-body size-sm"/>-->
													<ItemsControl ItemsSource="{Binding EntryViewModels}">
														<ItemsControl.ItemTemplate>
															<DataTemplate DataType="vm:ScheduleEntryViewModel">
																<StackPanel Orientation="Horizontal" Margin="11,0,0,0">
																	<TextBlock Text="{Binding StartTime}" Classes="sch"/>
																	<TextBlock Text="-" Classes="sch"/>
																	<TextBlock Text="{Binding EndTime}" Classes="sch"/>
																	<TextBlock Text="{Binding Name}" Classes="sch" Margin="6,0,0,0"/>
																</StackPanel>
															</DataTemplate>
														</ItemsControl.ItemTemplate>
													</ItemsControl>
												</StackPanel>
											</DataTemplate>
										</ItemsControl.ItemTemplate>
									</ItemsControl>
								</StackPanel>

								<!--Live-->
								<StackPanel Grid.Column="2" HorizontalAlignment="Right" Spacing="4" Orientation="Horizontal">
									<Border Width="40" Height="30" Background="{DynamicResource eventLiveBackground}" CornerRadius="3" IsVisible="{Binding IsLive}">
										<TextBlock Text="Live" Foreground="{DynamicResource eventLiveForeground}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
									</Border>
									<Border Width="45" Height="30" Background="Gray" CornerRadius="3" IsVisible="{Binding IsSimulation}">
										<TextBlock Text="Simulation" Foreground="White" FontStyle="Italic" FontSize="8" VerticalAlignment="Center" HorizontalAlignment="Center"/>
									</Border>
								</StackPanel>
							</Grid>
						</Button>
					</DataTemplate>
				</ItemsControl.ItemTemplate>
			</ItemsControl>
		</ScrollViewer>
		<Border Background="{DynamicResource medAppBackground}" BorderThickness="0,0,0,2" BorderBrush="{DynamicResource boldItemBorder}" Grid.Row="4">
			<Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto,Auto">
				<!-- Paging controls for archived events -->
				<StackPanel Orientation="Horizontal" Grid.Row="0" Grid.ColumnSpan="3" HorizontalAlignment="Center" Margin="0,4,0,0"
							IsVisible="{Binding !LiveAndUpcomingEventsShown}">
					<Button Command="{Binding PreviousPageCommand}" IsEnabled="{Binding HasPreviousPage}" Margin="0,0,10,0" Padding="8,4">
						<StackPanel Orientation="Horizontal">
							<Path Data="M 10 0 L 0 5 L 10 10" Stroke="{DynamicResource SystemControlForegroundBaseHighBrush}" StrokeThickness="1.5"
								  Width="8" Height="10" Stretch="Uniform" Margin="0,0,4,0" VerticalAlignment="Center"/>
							<TextBlock Text="Previous" Classes="size-xs"/>
						</StackPanel>
					</Button>
					<TextBlock Text="{Binding DisplayPageNumber, StringFormat='Page {0}'}" VerticalAlignment="Center" Margin="0,0,10,0" Classes="size-sm"/>
					<Button Command="{Binding NextPageCommand}" IsEnabled="{Binding HasNextPage}" Padding="8,4">
						<StackPanel Orientation="Horizontal">
							<TextBlock Text="Next" Classes="size-xs"/>
							<Path Data="M 0 0 L 10 5 L 0 10" Stroke="{DynamicResource SystemControlForegroundBaseHighBrush}" StrokeThickness="1.5"
								  Width="8" Height="10" Stretch="Uniform" Margin="4,0,0,0" VerticalAlignment="Center"/>
						</StackPanel>
					</Button>
				</StackPanel>

				<Button Grid.Column="0" Grid.Row="1" Command="{Binding ToggleLiveArchiveCommand}" Margin="0,1,3,0">
					<StackPanel Orientation="Horizontal">
						<PathIcon Height="9" Data="{StaticResource trophygeom}">
							<PathIcon.RenderTransform>
								<RotateTransform Angle="180"/>
							</PathIcon.RenderTransform>
						</PathIcon>
						<TextBlock Text="{Binding ToggleButtonText}" Classes="size-xs"/>
					</StackPanel>
				</Button>

				<Button Grid.Column="2" Grid.Row="1" Command="{Binding SetDriverModeCommand}" Margin="0,1,3,0">
					<StackPanel Orientation="Horizontal">
						<PathIcon Height="9" Data="{StaticResource racehelmet}"/>
						<TextBlock Text="Driver Mode" Classes="size-xs"/>
					</StackPanel>
				</Button>

				<TextBlock Text="{Binding Version, StringFormat='Version {0}'}" FontSize="8" Margin="4,0,0,0" VerticalAlignment="Center" Grid.Row="2"/>
			</Grid>
		</Border>
	</Grid>
</UserControl>
